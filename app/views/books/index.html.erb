<%= flash[:success] %>

<%= render 'info',user: @user2 %>

    <div class="col-md-8 offset-md-1">
      <h2>Books</h2>
      <table class="table table-hover table-inverse">
        <thead>
          <tr>
            <th>Title</th>
            <th>Opinion</th>
          </tr>
        </thead>
        <tbody>
        <% @books.each do |book| %>
          <tr>
            <td>
              <%= link_to user_path(book.id) do %>
                <%= image_tag book.user.get_profile_image(80,80) %>
              <% end %>
              <%= link_to book_path(book.id) do %>
                <%= book.title %>
              <% end %>
            </td>
            <td><%= book.body %></td>
          </tr>
        <% end %>
        </tbody>
      </table>
    </div>
  </div>

  <div class="row">
    <div class="col-3">
      <div class="btn btn-outline-secondary btn-block edit_user_path(@user.id)">
        <%= link_to edit_user_path(@user2.id) do %>
          <i class="fas fa-user-cog text-secondary"></i>
        <% end %>
      </div>
    </div>
  </div>

  <div class="row mt-3">
    <%= form_with model: @book do |f| %>
      <h2>New book</h2>
      <p>Title</p>
      <%= f.text_field :title %>
      <p>Opinion</p>
      <%= f.text_area :body %>
      <div class="mt-2">
      <%= f.submit "Create Book",class: "btn btn-success" %>
      </div>
    <% end %>
  </div>
</div>