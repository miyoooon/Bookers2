<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
      <h1>User info</h1>
      <%= form_with model: @user do |f| %>
        <p>Name</p>
        <%= f.text_field :name %>
        <p class="mt-3">Image</p>
        <%= f.file_field :profile_image, accept: "image/*" %>
        <p class="mt-3">Introduction</p>
        <%= f.text_area :introduction %>
        <div class="mt-2">
          <%= f.submit "Update User",class: "btn btn-success"%>
        </div>
      <% end %>
    </div>
  </div>
</div>
