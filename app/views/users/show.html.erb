<div>
  <% if @user.errors.any? %>
    <h3><%= @user.errors.count %>error prohibited this obj from being saved:</h3>
      <ul>
        <% @user.errors.full_messages.each do |message| %>
          <li><%= message %></li>
         <% end %>
      </ul>
  <% end %>
</div>

<%= flash[:notice] %>

<div class="container px-5 px-sm-0 mt-3">
  <div class="row">
    <div class="col-md-3">
      <h2>User info</h2>
      <table class="table">
        <tbody>
          <tr><%= image_tag @user.get_profile_image(100,100) %></tr>
          <tr>
            <th>name</th>
            <th><%= @user.name %></th>
          </tr>
          <tr>
            <th>introduction</th>
            <th><%= @user.introduction %></th>
          </tr>
        </tbody>
      </table>
    </div>

    <div class="col-md-8 offset-md-1">
      <h2>Books</h2>
      <table class="table">
        <thead>
          <tr>
            <th></th>
            <th>
              <h6>Title</h6>
            </th>
            <th>
              <h6>Opinion</h6>
            </th>
          </tr>
        </thead>
        <tbody>
          <% @books.each do |book| %>
          <tr>
            <td>
              <%= link_to user_path(@user.id) do %>
              <%= image_tag @user.get_profile_image(80,80) %>
              <% end %>
            </td>
            <td>
              <%= link_to book_path(book.id) do %>
              <%= book.title %>
              <% end %>
            </td>
            <td>
              <%= book.body %>
            </td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>


   <div class="row">
    <div class="col-3">
      <div class="btn btn-outline-secondary btn-block">
          <%= link_to edit_user_path(@user.id) do %>
           <i class="fas fa-user-cog text-secondary"></i>
          <% end %>
      </div>
    </div>
  </div>

  <%= render 'books/list', book: @book %>